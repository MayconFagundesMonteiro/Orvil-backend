generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./orvilDB.db"
}

model Livros {
  id       Int         @id @default(autoincrement())
  alugado  Boolean     @default(false)
  excluido Boolean     @default(false)
  capa     String
  titulo   String
  autor    String
  editora  String?
  ano      Int
  edicao   Int?
  genero   String
  Registro Registros[]
}

model Leitores {
  id        Int         @id @default(autoincrement())
  excluido  Boolean     @default(false)
  nome      String
  sexo      String
  cidade    String
  email     String      @unique
  telefone  String
  Registros Registros[]
}

model Registros {
  id             Int      @id @default(autoincrement())
  ativo          Boolean  @default(true)
  leitor         Leitores @relation(fields: [leitorId], references: [id])
  leitorId       Int
  livro          Livros   @relation(fields: [livroId], references: [id])
  livroId        Int
  dataEmprestimo DateTime
  dataDevolucao  DateTime
}
